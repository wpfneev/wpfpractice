        xmlns:local="clr-namespace:WpfMastery"
        mc:Ignorable="d"
        Title="ImageDemo" Height="400" Width="400">
    <StackPanel>
        <Image x:Name="myImage" Source="/images/pizza.jpg" MouseUp="myImage_MouseUp"/>
    </StackPanel>
</Window>
