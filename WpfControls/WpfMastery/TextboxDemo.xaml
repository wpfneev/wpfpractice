<Window x:Class="WpfMastery.TextboxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMastery"
        mc:Ignorable="d"
        Title="TextboxDemo" Height="300" Width="400">
    <StackPanel>
        <TextBox 
            x:Name="txtName" 
            Width="200" 
            Height="40"
            Foreground="Blue"
            Padding="5"
            BorderThickness="3"
            BorderBrush="Yellow"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            SpellCheck.IsEnabled="True"
            Language="en-us"
            Text="Hello, I am Abhay"
            IsReadOnly="True"
            ></TextBox>
    </StackPanel>
</Window>
