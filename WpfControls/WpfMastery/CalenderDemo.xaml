<Window x:Class="WpfMastery.CalenderDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMastery"
        mc:Ignorable="d"
        Title="CalenderDemo" Height="400" Width="400">
    <StackPanel>
        <Viewbox Stretch="Uniform">
            <Calendar x:Name="myCalender"
                      SelectedDate="01.01.2023"
                  DisplayMode="Month"
                  SelectedDatesChanged="myCalender_SelectedDatesChanged"
                  >
            </Calendar>
        </Viewbox>
        <TextBlock x:Name="myTextBlock"></TextBlock>
    </StackPanel>
</Window>
