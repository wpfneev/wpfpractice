<Window x:Class="Slider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp_Verition"
        mc:Ignorable="d" Title="Slider"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Height="500" Width="500">
    <StackPanel VerticalAlignment="Center" Margin="10">
        <Slider x:Name="Slider_test" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Maximum="100" Value="20" />
        <TextBlock x:Name="txt_SlideValue" FontSize="{Binding Value, ElementName=Slider_test, UpdateSourceTrigger=PropertyChanged}" Text="{Binding Value, ElementName=Slider_test, Mode=OneWay}"></TextBlock>
        <Calendar x:Name="cal_firstDate">
            <Calendar.BlackoutDates>
                <CalendarDateRange Start="01/01/2023" End="02/20/2023"></CalendarDateRange>
            </Calendar.BlackoutDates>
        </Calendar>
        <TextBlock x:Name="txt_firstDate" Text="{Binding SelectedDate, ElementName=cal_firstDate, UpdateSourceTrigger=PropertyChanged}" />
        <local:WindowPropChanger DataContext="{RelativeSource Self}" />
    </StackPanel>
</Window>
