        <TextBox HorizontalAlignment="Left" Margin="670,63,0,0" TextWrapping="Wrap" Text="{Binding SelectedItem.Name, ElementName=grid_Info, Mode=OneWay}"  VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="670,118,0,0" TextWrapping="Wrap" Text="{Binding SelectedItem.Email, ElementName=grid_Info, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="670,176,0,0" Text="{Binding SelectedItem.Password, ElementName=grid_Info, Mode=OneWay}" VerticalAlignment="Top" Width="120"/>
