<Window x:Class="SimpleNavigatonDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNavigatonDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button  x:Name="btnPrev" Width="50" Click="btnPrev_Click">&lt;</Button>
            <Button Width="100" Click="Button_Click">Page1</Button>
            <Button Width="100" Click="Button_Click_1">Page2</Button>
            <Button Width="100" Click="Button_Click_2">Page3</Button>
            <Button x:Name="btnNext" Width="50" Click="btnNext_Click">&gt;</Button>
        </StackPanel>
        <Frame Grid.Row="1"
               Name="MainWindowFrame"
               NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
